@model Estoque_Caixa.Models.Produto

@{
    ViewData["Title"] = "Cadastrar Novo Produto";
}

<h1>Cadastrar novo produto </h1>

<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Produto" asp-action="Criar">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
            </div>
             <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Marca" class="control-label"></label>
                <input asp-for="Marca" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Quantidade" class="control-label"></label>
                <input asp-for="Quantidade" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PrecoUnit" class="control-label"></label>
                <input asp-for="PrecoUnit" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CodBarras" class="control-label"></label>
                <input asp-for="CodBarras" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DataCadastro" class="control-label"></label>
                <input asp-for="DataCadastro" class="form-control" />
            </div>
             <div class="form-group">
                <label asp-for="StatusProduto" class="control-label"></label>
                <input type="checkbox" asp-for="StatusProduto" class="form-check-input" />
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<hr>
<br>
<div>
    <a asp-action="Index">Voltar</a>
</div>